<head>
		<title>Send Details to Catering</title>
		<meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	</head>
	<body class="container">
		<% if(err && err.length > 0) { %>
			<div class="alert alert-danger" role="alert">
				Error in details provided: <%= err %>
			</div>
		<% } %>
		<% if (succ && succ.length > 0) { %>
			<div class="alert alert-success" role="alert">
				<%= succ %>
			</div>
		<% } %>

		<br>
		<h2>Send Details to Catering</h2>
		<br>

		<form action="<%=result.event_id%>" method="post" id='form'>


			<div class="form-row">
				<div class="form-group col-md-6">
					<label for="cateringEmail">Catering Contact Email</label>
					<input type="email" class="form-control" name="cateringEmail" required>
				</div>

				<div class="form-group col-md-6" style="padding-top: 32px; padding-left: 20px;">
					<a href="#myModal" class="btn btn-primary" data-toggle="modal">Send Guest Details</a>
				</div>
			</div>
			
			
			 <!-- Modal HTML -->
			 <div id="myModal" class="modal fade">
				 <div class="modal-dialog modal-confirm">
					 <div class="modal-content">
						 <div class="modal-header">
							 <h4 class="modal-title">Confirm Email Submission</h4>
							 <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						 </div>
						 <div class="modal-body">
							 <p>An email will be sent to catering containing guest details.</p>
						 </div>
						 <div class="modal-footer">
							 <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
							 <button type="submit" class="btn btn-primary">Confirm</button>
						 </div>
					 </div>
				 </div>
			 </div>



		</form>

		<a href="/event/view/<%=result.event_id%>"><button class="btn btn-primary">Go Back</button> </a>

	</body>
