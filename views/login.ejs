<head>
	<title>Login</title>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
	<a class="btn btn-primary" href="/" role="button" style="margin:12px">Back</a>
<div class="container">
	<% if (message && message.length > 0) { %>
			<div id='messageId' class="alert alert-danger"><%= message %></div>
	<% } %>
	<% if(err && err.length > 0) { %>
		<% console.log(err) %>
		<div class="alert alert-danger" role="alert">
			Error in details provided: <%= err %>
		</div>
	<% } %>
	<% if (succ && succ.length > 0) { %>
		<div class="alert alert-success" role="alert">
			<%= succ %>
		</div>
	<% } %>
	<h2>Login</h2>
	<form action="/login/authenticate" method="post">
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="inputEmail">Email address</label>
				<input id='emailInput' type="email" class="form-control" name="email" value="" required/>
			</div>
		</div>

		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="inputPassword">Password</label>
				<input id='passwordInput' type="password" class="form-control" name="password" value="" required/>
			</div>
		</div>
		<button type="submit" id='submitId' class="btn btn-primary">Submit</button>
	</form>

	<!-- Bootstrap Javascript -->
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</div>
</body>
