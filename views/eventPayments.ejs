<head>
	<title>Event Payments</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body class="container">
	<% if(err && err.length > 0) { %>
	<div class="alert alert-danger" role="alert">
		Error in details provided: <%= err %>
	</div>
	<% } %>
	<% if (succ && succ.length > 0) { %>
	<div class="alert alert-success" role="alert">
		<%= succ %>
	</div>
	<% } %>

	<div class="card">
        <div class="card-header">
        	 <a class="btn btn-primary" href="/event/view/<%=event%>" role="button">Back</a>
            <h5 class="float-right" style="padding-top: 6px;">Total payment received for this event: €<%=paymentTotal%></h5>
           
        </div>
                
    </div>

	<table class="table table-sm">
		<thead>
			<th>Name</th>
			<th>Payment Amount</th>
			<th>Date of Payment</th>
			<th>Payment Type</th>
		</thead>
		<tbody>
			<% for(var i=0; i < payments.length; i++) { %>
			<tr>
				<td><%=names[i]%></td>
				<td>€<%=payments[i].amount%></td>
				<td><%=payments[i].paidAt%></td>
				<td><%=payments[i].type%></td>
			</tr>
			<% } %>
		</tbody>
	</table>

</body>
