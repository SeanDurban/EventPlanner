<head>
	<title>Ticket Settings</title>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body class="container">
	<% if(err && err.length > 0) { %>
		<div class="alert alert-danger" role="alert">
		  Error in details provided: <%= err %>
		</div>
	<% } %>
	<% if (succ && succ.length > 0) { %>
		<div class="alert alert-success" role="alert">
			<%= succ %>
		</div>
	<% } %>
	<br>
	<div class= "row">
		<h2><%=event.title%> Tickets</h2>
	</div>
 <br>
	<form action="/event/tickets/setup/<%=event.event_id%>" method="post" id='form'>
		<input type="hidden" name="event_id" value=<%=event.event_id%> />
		<div class="form-group row">
			<div class= "col-xs-3">
				<label for="totalTables">Number Of Tables</label>
				<input type="number" class="form-control" name="totalTables" id="totalTables" onchange= "calculateTotalTickets()" required/>
			</div>
		</div>
		<div class="form-group row">
			<div class= "col-xs-3">
				<label for="tableSize">Tickets per Table</label>
				<input type="number" class="form-control" name="tableSize" id="tableSize" onchange="calculateTotalTickets()" required/>
			</div>
		</div>
		<div class="row">
		<label for="ticketPrice">Table Price</label>
		</div>
		<div class="form-group row">
			<div class="input-group-prepend">
				<span class="input-group-text">€</span>
			</div>
			<div class= "col-xs-3">
				<input type="number" class="form-control" name="tablePrice" required/>
			</div>
		</div>
		<div class="form-group row">
			<div class= "col-xs-3">
				<label for="totalTickets">Number of General Tickets</label>
				<input type="number" class="form-control" name="totalTickets" id="totalTickets" onchange="calculateTotalTickets()" required/>
			</div>
		</div>
		<div class="row">
		<label for="ticketPrice">Ticket Price</label>
		</div>
		<div class="form-group row">
			<div class="input-group-prepend">
				<span class="input-group-text">€</span>
			</div>
			<div class= "col-xs-3">
				<input type="number" class="form-control" name="ticketPrice" required/>
			</div>
		</div> <br>
		<h6 id="totalTicketsInForm">Total Amount Of Tickets: 0</h6>
		<br>
		<button type="submit" class="btn btn-primary">Confirm</button>
	</form>
	<script>
		function calculateTotalTickets() {
			var tableTickets = $("#totalTables").val() * $("#tableSize").val();
			var noTickets = parseFloat(tableTickets) + parseFloat($("#totalTickets").val());
			$("#totalTicketsInForm").text("Total Amount Of Tickets: "+noTickets);
		}
	</script>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
	<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
</body>
