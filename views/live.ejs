	<script>
	
	var requestLoop = setInterval(function(){
		$.ajax({
			url: "amount",
			type: "POST",			
			success: function(data) {
			  $('#totalRaised').html(data);	
			},
			error:   function(xhr, text, err) {
			}
		  });
	}, 1000);
	

	$('#milestone').click(function(){
		console.log("Milestone");
		$('#milestonePopup').show();
		//setTimeout(function(){ $('#milestonePopup').fadeOut(); }, 3000);
	});

	</script>
