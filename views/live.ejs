<head>
		<title><%= result.name %></title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	</head>

	<style>
			#milestonePopup{
				display: none;
				width:100%;
				height:100%;
				opacity:0.7;
				background-color: orange;
				z-index: 1000;
				position: absolute;
				left: 0;
				top: 0;
				text-align: center;
				vertical-align: middle;
				font-size: 3em;
				margin: 0 auto;
				
			}

			#milestoneText{
				display: none;
				vertical-align: middle;
				font-size: 4em;
				position: absolute;
				position: absolute;
				top: 25%;
				left: 25%;
				width: 50%;
				height: 25%;
				text-align: center;
				z-index: 1000;
				vertical-align: middle;
				color:white;				
			}

			.achieved{
				color:green;
			}
			.notachieved{
				color:red;
			}

	</style>
	<div class="milestone" id ="milestonePopup"></div>
	<div id="milestoneText"></div>
	<body class="container">
		<div class="row" style="margin-top:20px">
				<div class="col-md-3"></div>
				<div class="col-md-6" style="text-align:center;">					
					<div class="">
						<h2 style="word-break: break-all; " > <%= result.title %> , Live Updates!</h2>			
					</div>			
					<br>
					<div class="">
							<h2 style="word-break: break-all; " > Total raised so far: €<span id="totalRaised">0</span></h2>			
					</div>
					<div class="form-group">
						<h3>Milestones</h3>
						<% var existsGoal = true; if(!milestones||milestones.amounts.length==0){ existsGoal =false; %>
							<div>-No milestones-</div>
						<%}else{%>
						<%for(var x=0;x<milestones.amounts.length;x++){%>
							<div style="font-size:1.5em">
								€<span><%=milestones.amounts[x].amount%></span>								
								<span><%=milestones.amounts[x].label%></span>
								<span><% if(milestones.amounts[x].achieved){%>
									<span class='achieved'>Achieved</span>
								<% }else{ %>
									<span class='notachieved'>Not reached yet</span>
								<%}%>
									</span>
							</div>
						<%}}%>
						<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add Milestone</button>							
						<div class="row">
							<form action="/live/add/<%=eventId%>/<%=existsGoal%>" method="post" id='form'>
								<div id="addModal" class="modal fade" role="dialog">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header">
												<button type="button"style="float:left;margin:0;" class="close" data-dismiss="modal">&times;</button>
												<h4 class="modal-title" style="float:left">Add Milestone</h4>
											</div>
											<div class="modal-body" >
												<label>Milestone Label</label>
												<input type="label" name="label" class="form-control" value="" rows="5" required><br>
												<label>Donation goal</label>
												<input type="number" name="amount" class="form-control" value="" rows="5" required><br>							
											</div>
											<div class="modal-footer">		
												<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>							
												<button type="submit" class="btn btn-success">Confirm</button>
											</div>
										</div>
									</div>
								</div>		
							</form>	
						</div>

					</div>
					<div class="form-group">
						<h4>Location</h4>
						<label style="word-break: break-all;"><%= result.location %></label>
					</div>
					<div class="form-group">
						<h4>Date</h4>
						<label style="word-break: break-all;"><%= result.date.getDate() %>/<%= result.date.getMonth()+1%>/<%= result.date.getFullYear() %></label>
					</div>	
				</div>
				<div class="col-md-3"></div>	
				
				<div class="btn btn-primary" id ="milestone">Milestone</div>
				
		</div>	
	</body>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
	<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
	<script> $("#datepicker").datepicker(); </script>
	<script>
	
	var amountLoop = setInterval(function(){
		$.ajax({
			url: "amount",
			type: "POST",			
			success: function(data) {
			  $('#totalRaised').html(data);	
			},
			error:   function(xhr, text, err) {
			}
		  });
	}, 2000);

	var achievedLoop = setInterval(function(){
		$.ajax({
			url: "achieved/<%=eventId%>/"+$('#totalRaised').html(data),
			type: "POST",			
			success: function(data) {
				
			},
			error:   function(xhr, text, err) {
			}
		  });
	}, 100000);
	

	$('#milestone').click(function(){
		//milestonePop("You reached the goal!");	
		$.ajax({
			url: "achieved/<%=eventId%>/"+$('#totalRaised').html(),
			type: "POST",			
			success: function(data) {
				if(data&& data!='None'){
					milestonePop(data);
				}
			},
			error:   function(xhr, text, err) {
			}
		  });
	});

	function milestonePop(milestoneMessage){
		$('#milestonePopup').show();
		$('#milestoneText').text(milestoneMessage);
		$('#milestoneText').show();
		setTimeout(function(){ $('#milestonePopup').fadeOut(); }, 3000);
		setTimeout(function(){ $('#milestoneText').fadeOut(); }, 3000);
	}

	</script>
